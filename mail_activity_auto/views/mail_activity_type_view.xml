<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_mail_activity_type_inherit" model="ir.ui.view">
    <field name="name">view.mail.activity.type.inherit</field>
    <field name="model">mail.activity.type</field>
    <field name="inherit_id" ref="mail.mail_activity_type_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='next_type_ids']" position="after">
        <field name="auto"/>
        <field name="action_server_id"/>
      </xpath>
    </field>
  </record>

  <record id="view_mail_activity_type_search" model="ir.ui.view">
    <field name="name">view.mail.activity.type.search</field>
    <field name="model">mail.activity.type</field>
    <field name="arch" type="xml">
      <search string="Search Mail Activity Type">
        <field name="auto"/>
        <filter string="Automatic activity type" domain="[('auto', '=', True)]"/>
      </search>
    </field>
  </record>

</odoo>
